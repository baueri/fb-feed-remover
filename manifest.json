{
  "manifest_version": 2,
  "name": "Facebook cuccos",
  "version": "1.0",
  "description": "heha",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["script.js"]
    }
  ],
  "icons": {
    "48": "icon-48.png"
  },
  "browser_action": {
    "default_icon": {
      "48": "icon-48.png"
    },
    "default_title": "Facebook cuccos"
  },
  "background": {
    "scripts": ["script.js"],
    "persistent": false
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "birkaivan@gmail.com",
      "strict_min_version": "1.0",
      "update_url": "https://raw.githubusercontent.com/baueri/fb-feed-remover/main/updates.json"
    }
  }
}
